<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= remove_extension(file) %></a>
      <a href="/edit/<%= file %>">edit</a>
      <form class="inline" action="/delete/<%= file %>" method="post">
        <button type="submit">Delete</button> 
      </form>
    </li>
  <% end %>
</ul>

<p><a href="/file/new">New Document</a></p>

<!-- If they are signed in display signout button -->
<% if session[:user] %>
  <form action="/users/signout" method="post">
    <p class="user-status">
      Signed in as <%= session[:user] %>
      <button type="submit">Signout</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Signin</a></p>
  </form>
<% end %>